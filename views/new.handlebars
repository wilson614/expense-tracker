<div class="container mt-3" style="width: 500px;">
  <form action="/records" method="POST">
    <div class="form-group row">
      <label for="inputAmount" class="col-sm-4 col-form-label" style="text-align: end;"><small>*必填欄位</small></label>
      <div class="col-sm-8">
        <div style="text-align: center; font-weight: bold; font-size: larger;">請輸入你的支出</div>
      </div>
    </div>
    <div class="form-group row">
      <label for="inputName" class="col-sm-4 col-form-label" style="text-align: end;">名稱*：</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" placeholder="name" name="name">
      </div>
    </div>
    <div class="form-group row">
      <label for="inputDate" class="col-sm-4 col-form-label" style="text-align: end;">日期*：</label>
      <div class="col-sm-8">
        <input type="date" class="form-control" placeholder="date" name="date">
      </div>
    </div>
    <div class="form-group row">
      <label for="inputCategory" class="col-sm-4 col-form-label" style="text-align: end;">類別*：</label>
      <div class="col-sm-8">
        <select class="custom-select" id="inputGroupSelect01" name="category">
          <option selected>類別</option>
          {{#each categories}}
          <option value="{{ this.name }}">{{ this.name }}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="form-group row">
      <label for="inputAmount" class="col-sm-4 col-form-label" style="text-align: end;">金額*：</label>
      <div class="col-sm-8">
        <input type="number" class="form-control" placeholder="amount" name="amount">
      </div>
    </div>
    <div class="container mt-3" style="width: 500px;">
      <div class="d-flex justify-content-end mr-2">
        <button type="submit" class="btn btn-warning" style="width: 68%;">新增支出</button>
      </div>
    </div>
  </form>
</div>